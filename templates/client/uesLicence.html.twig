{% extends "client/base.html.twig" %}

{% block contenu %}

<div class="row m-4">
    <div class="col-md-12 mb-3">
        <h2 class="text-center">Programmes enseignés en licence</h2>
    </div>
    {% for ue in ues %}
        <div class="col-md-6 mb-3">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white text-center">
                    <i class="fa fa-info-circle"></i> {{ ue.titre }}
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 mb-2">
                            <div class="border rounded p-2 bg-light">
                                <b>Connaissances</b>: {{ ue.connaissance }}
                            </div>
                        </div>
                        <div class="col-md-12 mb-2">
                            <div class="border rounded p-2 bg-light">
                                <b>Compétences</b>: {{ ue.competence }}
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12 text-end">
                            <a href="{{ path('voir_details_ues_licence', {'id': ue.id}) }}" class="btn btn-success btn-sm text-white">
                                <i class="fa fa-eye"></i> Voir détails
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}
