{% extends "admin/base.html.twig" %}
{% block contenu %}

<div>
    {% for message in app.flashes('success') %}
    <div class="alert alert-success" role="alert">
        {{ message }}
    </div>
    {% endfor %}

    <div class="modal-content">
        <div class="modal-header bg-primary text-white" align = "center">
            <h5 class="modal-title" id="exampleModalLongTitle">Blocs de connaissances </h5>
        </div>
     
    </div>
</div><br><br>

<a type="button" class="btn mr-2 mb-2 btn-primary" href="{{path('ajouter_blocs_connaissances')}}">Nouvelle connaissances </a>

<div class="main-card mb-3 card">
    <div class="card-body">
        <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>Identifiant</th>
                    <th>Nom du bloc</th>
                    <th>Description du bloc</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for blocConnaissance in blocConnaissances %}
                <tr>
                    <td>{{ blocConnaissance.idConn }}</td>
                    <td>{{ blocConnaissance.nomBlocConn }}</td>
                    <td>{{ blocConnaissance.descriptionBlocConn }}</td>
                    <td>
                        <a href="{{ path('modifier_blocs_connaissances', {id: blocConnaissance.id}) }}" class="btn btn-warning btn-sm text-white">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="{{ path('supprimer_blocs_connaissances', {id: blocConnaissance.id}) }}" class="btn btn-danger btn-sm">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <th>Identifiant</th>
                    <th>Nom du bloc</th>
                    <th>Description du bloc</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

{% endblock %}
