{% extends "admin/base.html.twig" %}
{% block contenu %}

<div>
    {% for message in app.flashes('success') %}
    <div class="alert alert-success" role="alert">
        {{ message }}
    </div>
    {% endfor %}

    <div class="modal-content">
        <div class="modal-header bg-primary text-white" align = "center">
            <h5 class="modal-title" id="exampleModalLongTitle">Gestion des Utilisateurs </h5>
        </div>
     
    </div>
</div><br><br>

<a type="button" class="btn mr-2 mb-2 btn-primary" href="{{path('ajouter_utilisateur')}}">Nouveau Utilisateur </a>

<div class="main-card mb-3 card">
    <div class="card-body">
        <table style="width: 100%;" id="example" class="table table-hover table-striped table-bordered">
