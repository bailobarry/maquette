                    <th>Mot de passe de l'utilisateur</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for utilisateur in utilisateurs %}
                <tr>
                    <td>{{ utilisateur.id }}</td>
                    <td>{{ utilisateur.nomUser }}</td>
                    <td>{{ utilisateur.prenomUser }}</td>
                    <td>{{ utilisateur.mail }}</td>
                    <td>{{ utilisateur.password }}</td>
                    <td>
                        <a href="{{ path('modifier_utilisateur', {id: utilisateur.id}) }}" class="btn btn-warning btn-sm text-white">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="{{ path('supprimer_utilisateur', {id: utilisateur.id}) }}" class="btn btn-danger btn-sm">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
            <tfoot>
